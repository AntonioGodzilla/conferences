@page "/EditPerson/{Id:int}"
@using WDCWS.Data
@inject IPersonQuery PersonQuery

@if (PersonToEdit == null)
{
    <ProgressBar />
}
else
{
    @PersonToEdit.Id
    @PersonToEdit.Vorname
    @PersonToEdit.Nachname
}

@code
{
    [Parameter]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        PersonToEdit = await PersonQuery.Get(Id);
    }

    public Person PersonToEdit { get; set; }
}
