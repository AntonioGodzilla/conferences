@if (IsLoading)
{
    @if (LoadingContent != null)
    {
        @LoadingContent
    }
    else
    {
        <h3>Please wait,...</h3>
    }
}
else
{
    @ChildContent
}

@code 
{
    [Parameter]
    public bool IsLoading { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public RenderFragment LoadingContent { get; set; }
}
